
@model IEnumerable<GB_lessons.Models.Employee>

@{ 
    ViewData["Title"] = "Index";
}

<div class="container">
    <hr />
    <a asp-action="Edit" class="btn btn-primary">Создать</a>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>№</th>
                <th>Фамилия Имя</th>
                <th>Возраст</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var employee in Model)
                {
                    DateTime zeroTime = new DateTime(1, 1, 1);
                    DateTime thisDay = DateTime.Today;
                    TimeSpan DateDiff = thisDay - employee.DateOfBirth;
                    int years = (zeroTime + DateDiff).Year - 1;
                    <tr>
                        <td>@employee.Id</td>
                        <td><a asp-action="DetailCard" asp-route-id="@employee.Id">@(employee.LastName + " " + employee.FirstName)</a></td>
                        <td>@years</td>
                        <td><a asp-action="Edit" asp-route-id="@employee.Id"><i class="fa fa-edit"></i></a></td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <br />

    <a asp-controller="Home" asp-action="Index">На главную</a>
</div>